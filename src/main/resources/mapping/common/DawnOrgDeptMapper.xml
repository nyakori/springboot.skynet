<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.common.DawnOrgDeptMapper">
    <resultMap id="map" type="com.kaos.his.entity.common.DawnOrgDept">
        <id column="DEPT_ID" jdbcType="VARCHAR" property="deptCode"/>
        <result column="DEPT_NAME" jdbcType="VARCHAR" property="deptName"/>
        <result column="DEPTOWN" jdbcType="VARCHAR" property="deptOwn"/>
        <result column="VALID_STATE" jdbcType="VARCHAR" property="valid"/>
    </resultMap>

    <sql id="item">
        DEPT_ID,
        DEPT_NAME,
        DEPTOWN,
        VALID_STATE
    </sql>

    <select id="queryDepartment" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            DAWN_ORG_DEPT
        <where>
            <if test="true">
                AND DEPT_ID = #{deptCode}
            </if>
        </where>
    </select>
</mapper>
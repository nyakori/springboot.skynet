<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.common.PatientMapper">
    <resultMap id="map" type="com.kaos.his.entity.common.Patient">
        <id column="CARD_NO" jdbcType="VARCHAR" property="cardNo"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="BIRTHDAY" jdbcType="VARCHAR" property="birthday"/>
        <result column="SEX_CODE" jdbcType="VARCHAR" property="sex"/>
        <result column="IDENNO" jdbcType="VARCHAR" property="identityCardNo"/>
        <result column="LINKMAN_TEL" jdbcType="VARCHAR" property="tel"/>
    </resultMap>

    <sql id="item">
        CARD_NO,
        NAME,
        BIRTHDAY,
        SEX_CODE,
        IDENNO,
        LINKMAN_TEL
    </sql>

    <select id="queryPatient" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            COM_PATIENTINFO
        <where>
            <if test="cardNo!=null">
                AND CARD_NO = #{cardNo}
            </if>
            <if test="valid!=null">
                AND IS_VALID = #{valid}
            </if>
        </where>
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.outpatient.OutpatientMapper">
    <resultMap id="map" type="com.kaos.his.entity.outpatient.Outpatient" extends="com.kaos.his.mapper.common.ComPatientInfoMapper.map">
        <id column="CLINIC_CODE" jdbcType="VARCHAR" property="clinicCode"/>
        <result column="TRANS_TYPE" jdbcType="VARCHAR" property="transType"/>
        <result column="REG_DATE" jdbcType="VARCHAR" property="regDate"/>
        <result column="DEPT_CODE" jdbcType="VARCHAR" property="regDeptCode"/>
    </resultMap>

    <sql id="item">
        T1.CLINIC_CODE,
        T1.TRANS_TYPE,
        T1.REG_DATE,
        T1.DEPT_CODE,
        <include refid="patientItem"/>
    </sql>

    <sql id="patientItem">
        T2.CARD_NO,
        T2.NAME,
        T2.BIRTHDAY,
        T2.SEX_CODE,
        T2.IDENNO,
        T2.LINKMAN_TEL
    </sql>

    <select id="queryOutpatient" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            FIN_OPR_REGISTER T1
            LEFT JOIN COM_PATIENTINFO T2 ON T2.CARD_NO = T1.CARD_NO
        <where>
            <if test="true">
                AND T1.CLINIC_CODE = #{clinicCode}
            </if>
            <if test="true">
                AND T1.TRANS_TYPE = #{transType}
            </if>
        </where>
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.skynet.api.mapper.inpatient.fee.balance.FinIpbBalanceHeadMapper">
    <resultMap id="map" type="com.kaos.skynet.entity.inpatient.fee.balance.FinIpbBalanceHead">
        <id column="INVOICE_NO" jdbcType="VARCHAR" property="invoiceNo"/>
        <id column="TRANTYPE" jdbcType="VARCHAR" property="transType"/>
        <result column="BILLBATCHCODE" jdbcType="VARCHAR" property="billBatchCode"/>
        <result column="BILLNO" jdbcType="VARCHAR" property="billNo"/>
        <result column="RANDOM" jdbcType="VARCHAR" property="random"/>
        <result column="BILLQRCODE" jdbcType="VARCHAR" property="billQRCode"/>
        <result column="PICTUREURL" jdbcType="VARCHAR" property="picUrl"/>
        <result column="OPERDATE" jdbcType="VARCHAR" property="operDate"/>
        <result column="STATE" jdbcType="VARCHAR" property="state"/>
        <result column="SUCCESSSTATE" jdbcType="VARCHAR" property="successState"/>
        <result column="BUSINESSTYPE" jdbcType="VARCHAR" property="businessType"/>
        <result column="SOURCE" jdbcType="VARCHAR" property="sourceType"/>
        <result column="CARD_NO" jdbcType="VARCHAR" property="cardNo"/>
        <result column="OPERID" jdbcType="VARCHAR" property="operCode"/>
        <result column="BUS_NO" jdbcType="VARCHAR" property="busNo"/>
        <result column="WRITEOFFREASON" jdbcType="VARCHAR" property="writeOffReason"/>
        <result column="CREATE_DATE" jdbcType="VARCHAR" property="createDate"/>
    </resultMap>

    <sql id="item">
        INVOICE_NO,
        BILLBATCHCODE,
        BILLNO,
        RANDOM,
        BILLQRCODE,
        PICTUREURL,
        OPERDATE,
        STATE,
        SUCCESSSTATE,
        TRANTYPE,
        BUSINESSTYPE,
        SOURCE,
        CARD_NO,
        OPERID,
        BUS_NO,
        WRITEOFFREASON,
        CREATE_DATE
    </sql>

    <select id="queryInvoice" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            XYHIS.FIN_COM_ELECTRONICINVOICE
        <where>
            <if test = "true">
                AND INVOICE_NO = #{invoiceNo}
            </if>
            <if test = "true">
                AND TRANS_TYPE = #{transType}
            </if>
        </where>
    </select>

    <insert id="insertInvoice">
        INSERT INTO
            XYHIS.FIN_COM_ELECTRONICINVOICE (
        <include refid="item"/>
            )
        VALUES
            (
                #{invoiceNo},
                #{billBatchCode},
                #{billNo},
                #{random},
                #{billQRCode},
                #{picUrl},
                #{operDate},
                #{state},
                #{successState},
                #{transType},
                #{businessType},
                #{sourceType},
                #{cardNo},
                #{operCode},
                #{busNo},
                #{writeOffReason},
                #{createDate}
            )
    </insert>

    <update id="updateStockInfo">
        UPDATE
            XYHIS.PHA_COM_STOCKINFO_HEDGING
        <trim prefix="SET" suffixOverrides=",">
            <if test = "true">
                BILLBATCHCODE = #{billBatchCode},
            </if>
            <if test = "true">
                BILLNO = #{billNo},
            </if>
            <if test = "true">
                RANDOM = #{random},
            </if>
            <if test = "true">
                BILLQRCODE = #{billQRCode},
            </if>
            <if test = "true">
                PICTUREURL = #{picUrl},
            </if>
            <if test = "true">
                OPERDATE = #{operDate},
            </if>
            <if test = "true">
                STATE = #{state},
            </if>
            <if test = "true">
                SUCCESSSTATE = #{successState},
            </if>
            <if test = "true">
                BUSINESSTYPE = #{businessType},
            </if>
            <if test = "true">
                SOURCE = #{sourceType},
            </if>
            <if test = "true">
                CARD_NO = #{cardNo},
            </if>
            <if test = "true">
                OPERID = #{operCode},
            </if>
            <if test = "true">
                BUS_NO = #{busNo},
            </if>
            <if test = "true">
                WRITEOFFREASON = #{writeOffReason},
            </if>
            <if test = "true">
                CREATE_DATE = #{createDate},
            </if>
        </trim>
        <where>
            <if test = "true">
                AND INVOICE_NO = #{invoiceNo}
            </if>
            <if test = "true">
                AND TRANS_TYPE = #{transType}
            </if>
        </where>
    </update>
</mapper>
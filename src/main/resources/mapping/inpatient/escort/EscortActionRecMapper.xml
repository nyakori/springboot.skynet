<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.skynet.mapper.inpatient.escort.EscortActionRecMapper">
    <resultMap id="map" type="com.kaos.skynet.entity.inpatient.escort.EscortActionRec">
        <id column="ESCORT_NO" jdbcType="VARCHAR" property="escortNo"/>
        <result column="REC_NO" jdbcType="VARCHAR" property="recNo"/>
        <result column="ACTION" jdbcType="VARCHAR" property="action"/>
        <result column="OPER_DATE" jdbcType="VARCHAR" property="recDate"/>
        <result column="REMARK" jdbcType="VARCHAR" property="remark"/>
    </resultMap>

    <sql id="item">
        ESCORT_NO,
        REC_NO,
        ACTION,
        OPER_DATE,
        REMARK
    </sql>

    <select id="queryActions" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            KAOS.ESCORT_ACTION_REC
        <where>
            <if test="true">
                AND ESCORT_NO = #{escortNo}
            </if>
        </where>
        ORDER BY
            REC_NO
    </select>

    <insert id="insertAction">
        <selectKey keyProperty="recNo" order="BEFORE" resultType="java.lang.Integer">
            SELECT
                NVL(MAX(REC_NO), '0') + 1
            FROM
                KAOS.ESCORT_ACTION_REC
            WHERE
                ESCORT_NO = #{escortNo}
        </selectKey>
        INSERT INTO
            KAOS.ESCORT_ACTION_REC(ESCORT_NO, REC_NO, ACTION, OPER_DATE, REMARK)
        VALUES
            (#{escortNo}, #{recNo}, #{action}, #{recDate}, #{remark})
    </insert>
</mapper>
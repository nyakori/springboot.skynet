<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.inpatient.FinIprPrepayInMapper">
    <resultMap id="map" type="com.kaos.his.entity.inpatient.FinIprPrepayIn">
        <id column="CARD_NO" jdbcType="VARCHAR" property="cardNo"/>
        <id column="HAPPEN_NO" jdbcType="VARCHAR" property="happenNo"/>
        <result column="BED_NO" jdbcType="VARCHAR" property="bedNo"/>
        <result column="PREDOCT_CODE" jdbcType="VARCHAR" property="preDocCode"/>
        <result column="DEPT_CODE" jdbcType="VARCHAR" property="preDeptCode"/>
        <result column="PRE_DATE" jdbcType="VARCHAR" property="preDate"/>
        <result column="OPER_CODE" jdbcType="VARCHAR" property="openDocCode"/>
        <result column="OPER_DATE" jdbcType="VARCHAR" property="openDate"/>
        <result column="PRE_STATE" jdbcType="VARCHAR" property="state"/>
    </resultMap>

    <sql id="item">
        CARD_NO,
        HAPPEN_NO,
        BED_NO,
        PREDOCT_CODE,
        DEPT_CODE,
        PRE_DATE,
        OPER_CODE,
        OPER_DATE,
        PRE_STATE
    </sql>

    <select id="queryPrepayIn" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            FIN_IPR_PREPAYIN
        <where>
            <if test="cardNo != null">
                AND CARD_NO = #{cardNo}
            </if>
            <if test="happenNo != null">
                AND HAPPEN_NO = #{happenNo}
            </if>
        </where>
    </select>

    <select id="queryPrepayIns" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            FIN_IPR_PREPAYIN
        <where>
            <if test="cardNo != null">
                AND CARD_NO = #{cardNo}
            </if>
            <if test="states != null">
                AND PRE_STATE IN
                <foreach collection="states" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>

    <select id="queryLastPrepayIn" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            FIN_IPR_PREPAYIN
        <where>
            <if test="cardNo != null">
                AND CARD_NO = #{cardNo}
                AND HAPPEN_NO = (
                    SELECT
                        MAX(T1.HAPPEN_NO)
                    FROM
                        FIN_IPR_PREPAYIN T1
                    WHERE
                        T1.CARD_NO = FIN_IPR_PREPAYIN.CARD_NO
                <if test="states != null">
                        AND T1.PRE_STATE IN
                    <foreach collection="states" item="item" open="(" separator="," close=")">
                            #{item}
                    </foreach>
                </if>
                )
            </if>
        </where>
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.fee.FinIpbBalancePayMapper">
    <!-- 实体映射表 -->
    <resultMap id="map" type="com.kaos.his.entity.fee.FinIpbBalancePay">
        <result column="INVOICE_NO" jdbcType="VARCHAR" property="invoiceNo"/>
        <result column="TRANS_TYPE" jdbcType="VARCHAR" property="transType"/>
        <result column="TRANS_KIND" jdbcType="VARCHAR" property="transKind"/>
        <result column="PAY_WAY" jdbcType="VARCHAR" property="payWay"/>
        <result column="COST" jdbcType="VARCHAR" property="cost"/>
    </resultMap>

    <!-- 全部字段 -->
    <sql id="allItem">
        INVOICE_NO,
        TRANS_TYPE,
        TRANS_KIND,
        PAY_WAY,
        COST
    </sql>

    <!-- 接口1 -->
    <select id="QueryBalancePays" resultMap="map">
        SELECT
        <include refid="allItem"/>
        FROM
            XYHIS.FIN_IPB_BALANCEPAY
        WHERE
            INVOICE_NO = #{invoiceNo}
    </select>
</mapper>
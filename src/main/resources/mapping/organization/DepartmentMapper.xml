<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.organization.DepartmentMapper">
    <sql id="item">
        DEPT_ID AS CODE,
        DEPT_NAME AS NAME,
        DEPTOWN AS DEPTOWN
    </sql>

    <select id="QueryDepartment" resultMap="map">
        SELECT
        <include refid="item"/>
        FROM
            DAWN_ORG_DEPT
        <where>
            <if test="deptCode!=null">
                AND DEPT_ID = #{deptCode}
                AND VALID_STATE = '1'
            </if>
        </where>
    </select>

    <resultMap id="map" type="com.kaos.his.entity.organization.Department">
        <id column="CODE" jdbcType="VARCHAR" property="code"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="DEPTOWN" jdbcType="VARCHAR" property="deptOwn"/>
    </resultMap>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.config.DawnCodeTypeMapper">
    <!-- 实体映射表 -->
    <resultMap id="map" type="com.kaos.his.entity.config.DawnCodeType">
        <id column="ID" jdbcType="VARCHAR" property="id"/>
        <id column="PARENT_ID" jdbcType="VARCHAR" property="parentId"/>
        <id column="NAME" jdbcType="VARCHAR" property="name"/>
    </resultMap>

    <!-- 全部字段 -->
    <sql id="allItem">
        CONS_TYPE_ID AS ID,
        CONS_TYPE_PARENT_ID AS PARENT_ID,
        CONS_TYPE_NAME AS NAME
    </sql>

    <!-- 接口1 -->
    <select id="QueryValidCodeType" resultMap="map">
        SELECT
        <include refid="allItem"/>
        FROM
            DAWN_CODE_TYPE
        <where>
            <if test="id != null">
                AND CONS_TYPE_ID = #{id}
            </if>
            AND VALID_STATE = '1'
        </where>
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.his.mapper.surgery.RoomMapper">
    <!-- 实体映射表 -->
    <resultMap id="map" type="com.kaos.his.entity.surgery.Room">
        <id column="ROOM_ID" jdbcType="VARCHAR" property="roomId"/>
        <result column="ROOM_NAME" jdbcType="VARCHAR" property="roomName"/>
        <result column="DEPT_CODE" jdbcType="VARCHAR" property="deptCode"/>
    </resultMap>

    <!-- 所有字段 -->
    <sql id="allItem">
        ROOM_ID,
        ROOM_NAME,
        DEPT_CODE
    </sql>

    <!-- 接口 -->
    <select id="queryRoom" resultMap="map">
        SELECT
        <include refid="allItem"/>
        FROM
            XYHIS.MET_OPS_ROOM
        WHERE
            ROOM_ID = #{roomId}
    </select>
</mapper>